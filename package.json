{
  "name": "black-phoenix",
  "version": "0.1.0",
  "private": true,
  "description": "An application for managing billing data for consulting projects",
  "main": "src/server/index.js",
  "scripts": {
    "build": "browserify src/client/modules/main.js -t ./src/server/transforms/ractive -t ./src/server/transforms/css -t envify > app-production.js",
    "get-secrets": "nest get-secrets --prompt",
    "lint": "jshint src test/unit test/ui test/mock-app test/mock-api",
    "start": "node .",
    "start-api": "node test/mock-api",
    "start-dev": "node test/mock-app",
    "style": "jscs src test/unit",
    "test": "npm run lint && npm run style && npm run test-unit",
    "test-unit": "mocha --require test/unit/setup.js --ui tdd --recursive test/unit/tests",
    "test-ui": "mocha --ui bdd test/ui/setup test/ui/tests",
    "vagrant-restart-server": "vagrant ssh -c 'sudo service black-phoenix restart'",
    "vagrant-watch-log": "vagrant ssh -c 'sudo tail -F /var/log/blackphoenix.log'"
  },
  "devDependencies": {
    "bluebird": "^2.5.3",
    "chai": "^1.10.0",
    "chai-datetime": "^1.3.1",
    "cookies": "^0.5.0",
    "cors": "^2.5.2",
    "jscs": "^1.8.1",
    "jshint": "^2.5.10",
    "leadfoot": "^1.2.1",
    "nest": "git+https://6f278b7cbc5d8c3ba8961945c677a7d1f53e2901:x-oauth-basic@github.com/bocoup/nest-cli.git",
    "selenium-binaries": "^0.2.0",
    "sinon": "^1.12.1"
  },
  "dependencies": {
    "ampersand-model": "^4.0.3",
    "ampersand-rest-collection": "^2.0.4",
    "ampersand-router": "^1.0.6",
    "body-parser": "^1.10.0",
    "browserify": "^8.0.2",
    "browserify-middleware": "^4.1.0",
    "cookies": "^0.5.0",
    "cookies-js": "^1.1.0",
    "debug": "^2.1.0",
    "envify": "^3.2.0",
    "express": "^4.10.4",
    "lodash.assign": "^2.4.1",
    "mocha": "^2.0.1",
    "octonode": "^0.6.12",
    "ractive": "^0.6.1",
    "through": "^2.3.6"
  }
}
