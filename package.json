{
  "name": "weekly-review",
  "version": "0.1.0",
  "private": true,
  "description": "An application for managing billing data for consulting projects",
  "main": "src/server/index.js",
  "scripts": {
    "build": "node build/build.js > app-production.js",
    "lint": "jshint src test",
    "start": "node .",
    "start-dev": "node test/mock-app",
    "style": "jscs src test",
    "test": "npm run lint && npm run style && npm run test-unit",
    "test-unit": "mocha --require test/unit/setup.js --ui tdd --recursive test/unit/tests",
    "test-ui": "mocha --ui bdd test/ui/setup test/ui/tests"
  },
  "devDependencies": {
    "bluebird": "^2.5.3",
    "chai": "^1.10.0",
    "chai-datetime": "^1.3.1",
    "cli-table": "^0.3.1",
    "http-proxy": "^1.8.1",
    "jscs": "^1.13.1",
    "jscs-jsdoc": "^0.4.4",
    "jshint": "^2.8.0",
    "leadfoot": "^1.2.1",
    "middle-man": "^0.1.0",
    "path-to-regexp": "^1.0.2",
    "replay": "^1.12.0",
    "selenium-binaries": "^0.3.6",
    "sinon": "^1.12.1",
    "wordwrap": "0.0.2"
  },
  "dependencies": {
    "ampersand-model": "^4.0.3",
    "ampersand-rest-collection": "^2.0.4",
    "ampersand-router": "^1.0.6",
    "body-parser": "^1.10.0",
    "browserify": "^8.0.2",
    "cookies": "^0.5.0",
    "cookies-js": "^1.1.0",
    "debug": "^2.1.0",
    "envify": "^3.2.0",
    "express": "^4.10.4",
    "lodash.assign": "^2.4.1",
    "lodash.isdate": "^2.4.1",
    "mocha": "^2.0.1",
    "moment": "^2.9.0",
    "ractive": "^0.6.1",
    "ractive-adaptors-ampersand": "^0.1.0",
    "through": "^2.3.6"
  }
}
